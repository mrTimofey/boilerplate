{
	"name": "boilerplate",
	"dependencies": {
		"express": "^4.12.4",
		"stylus": "^0.51.1",
		"kouto-swiss": "^0.11.12",
		"browserify": "^10.2.4",
		"jshint": "^2.8.0",
		"jade": "^1.11.0",
		"livereload": "^0.3.7",
		"parallelshell": "^1.1.1",
		"serve-favicon": "^2.3.0",
		"watchify": "^3.3.0",
		"jstransformer-stylus": "^1.0.0"
	},
	"scripts": {
		"jshint": "jshint assets/js",
		"styles": "stylus assets/styles/main.styl --sourcemap-inline -r -u kouto-swiss -o assets/compiled",
		"js": "browserify -d assets/js/main.js -o assets/compiled/main.js",
		"styles:watch": "stylus assets/styles/main.styl --sourcemap-inline -w -r -u kouto-swiss -o assets/compiled",
		"js:watch": "watchify -d assets/js/main.js -o assets/compiled/main.js -v",
		"watch": "parallelshell \"npm run styles:watch\" \"npm run js:watch\"",
		"server": "node app.js",
		"livereload": "node livereload.js",
		"start": "parallelshell \"npm run styles:watch\" \"npm run js:watch\" \"npm run server\" \"npm run livereload\""
	}
}